<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.demo3.controller.CarreraFormController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/carrera_form.css">

    <VBox fx:id="formCarrera" alignment="CENTER" spacing="15">
        <VBox fx:id="modalBox" styleClass="modal-box" spacing="15">
            
            <TextField fx:id="txtNombreCarrera" promptText="Nombre de la carrera: " styleClass="form-field"/>
            
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnCrear" styleClass="form-btn" text="Crear" onAction="#onSubmit"/>
                <Button fx:id="btnCancelar" styleClass="form-btn-cancel" text="Cancelar" onAction="#onCancel"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
